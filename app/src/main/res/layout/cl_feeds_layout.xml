<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_14sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rrl1"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/feeder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/semibold_font"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/feed_time"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/regular_font"
                android:textColor="@color/greyFont"/>


        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_below="@id/rrl1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyLine" />

        <TextView
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:id="@+id/feed_detail"
            android:layout_below="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hii how are you"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textColor="@color/black"
            android:autoLink="all"
            android:textColorLink="@color/blue"
            android:linksClickable="true"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/regular_font"/>

        <LinearLayout
            android:id="@+id/actionLayout"
            android:layout_alignParentStart="true"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_below="@id/feed_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_50sdp"
                android:id="@+id/feed_edit_btn"
                app:cornerRadius="@dimen/_14sdp"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_6sdp"
                android:text="EDIT"
                android:backgroundTint="@color/fadeBlue"
                android:textColor="@color/blue"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_60sdp"
                app:cornerRadius="@dimen/_14sdp"
                android:id="@+id/feed_remove_btn"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_6sdp"
                android:text="Delete"
                android:backgroundTint="@color/fadeRed"
                android:textColor="@color/red"/>

        </LinearLayout>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>