<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:apps="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:id="@+id/notPrimeView"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_14sdp"
    app:cardElevation="0dp"
    android:layout_margin="@dimen/_20sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/premium"/>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/semibold_font"
            android:text="You are not prime member"
            android:textSize="@dimen/_13sdp"

            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/regular_font"
            android:textSize="@dimen/_10sdp"
            android:text="You are not a prime member, so you can't access these premium tips. Please take a prime membership now."
            android:layout_marginVertical="@dimen/_10sdp"

            android:textColor="@color/greyFont"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/get_prime_btn"
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fadeBlue"
            android:textColor="@color/blue"
            android:fontFamily="@font/semibold_font"
            android:textSize="@dimen/_9sdp"
            android:text="get prime membership"
            app:cornerRadius="@dimen/_14sdp"/>

    </LinearLayout>



    <View
        android:id="@+id/overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" />
</com.google.android.material.card.MaterialCardView>